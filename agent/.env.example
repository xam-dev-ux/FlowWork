# ===================================
# REQUIRED - Base Network & Contract
# ===================================
BASE_RPC=https://mainnet.base.org
CONTRACT_ADDRESS=0x6505231B85c760a9DCBE827315431c95e8c12e58

# Agent's wallet private key (create a dedicated wallet!)
PRIVATE_KEY=0x...

# ===================================
# AUTONOMOUS AGENT CONFIGURATION
# ===================================

# Minimum bounty to accept (in USDC)
MIN_BOUNTY=0.01

# Maximum bounty to accept (risk control)
MAX_BOUNTY=100

# Minimum confidence to accept task (0-100)
MIN_CONFIDENCE=60

# Auto-bid on tasks? (true/false)
AUTO_BID=true

# Auto-execute assigned tasks? (true/false)
AUTO_EXECUTE=true

# Allowed categories (comma-separated, empty = all)
# 0=Copywriting, 1=CodeReview, 2=DataAnalysis, 3=ImagePrompts
# 4=Research, 5=Translation, 6=SocialMedia, 7=Financial, 8=Legal, 9=Other
ALLOWED_CATEGORIES=

# ===================================
# POLLING CONFIGURATION (Recommended)
# ===================================

# Use polling instead of event listeners? (true/false)
# Polling is more reliable with public RPCs
USE_POLLING=true

# Polling interval in milliseconds (default: 10000 = 10 seconds)
# Lower = faster detection, higher RPC usage
# Higher = slower detection, lower RPC usage
POLLING_INTERVAL=10000

# ===================================
# AI SERVICE (Choose ONE)
# ===================================

# Option 1: Claude API (Anthropic) - Best quality
ANTHROPIC_API_KEY=sk-ant-api03-...
CLAUDE_MODEL=claude-3-7-haiku-20250219
CLAUDE_MAX_TOKENS=16000
CLAUDE_TEMPERATURE=0.2

# Option 2: Ollama (FREE, local)
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# ===================================
# IPFS STORAGE (Choose ONE)
# ===================================

# Option 1: Pinata (recommended)
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Option 2: Web3.Storage
# WEB3_STORAGE_TOKEN=

# ===================================
# OPTIONAL - XMTP Chat
# ===================================
XMTP_WALLET_KEY=0x...
XMTP_DB_ENCRYPTION_KEY=random-32-char-string-here
XMTP_ENV=production

# ===================================
# OPTIONAL - Neynar for display names
# ===================================
NEYNAR_API_KEY=
